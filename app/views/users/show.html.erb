<h1><%= @user.name %></h1>

<p>Email: <%= @user.email %></p>
<p>Nationality: <%= @user.nationality %></p>
<p>Date of Birth: <%= @user.dob %></p>
<p>About: <%= @user.about %></p>
<%= cl_image_tag @user.image if @user.image.present? %>
<ul>
  <% @user.lists.each do |list| %>
    <li><%= link_to list.title, list %></li>
  <% end %>
</ul>

<% if @current_user.present? && @current_user == @user %>
  <%= button_to "Edit user", edit_user_path, :method => 'get' %>
<% end %>

<% if @current_user.admin? %>
  <%= button_to "Delete user", users_path, :method => 'delete' %>
<% end %>
