<h1>Edit User</h1>

<%= form_for @user, :html => {:multipart => true} do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :nationality %>
  <%= f.text_field :nationality %>

  <%= f.label :dob %>
  <%= f.date_field :dob, :placeholder => 'DD-MM-YYYY'%>

  <%= f.label :about %>
  <%= f.text_field :about %>

  <%= f.label "Upload from your computer" %>
  <%= f.cl_image_upload :image %>

  <%= f.submit "Update" %>

<% end %>
