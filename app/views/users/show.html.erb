<h1>My profile <%= @user.name %></h1>

<%= cl_image_tag(@user.image, :class => 'profile-pic-large') if @user.image.present?%>
<p>Name: <%= @user.name %></p>
<p>Email: <%= @user.email %></p>
<p>Nationality: <%= @user.nationality %></p>
<p>Date of Birth: <%= @user.dob %></p>
<p>About: <%= @user.about %></p>
<p>All lists:</p>
<ul>
  <% @user.lists.each do |list| %>
    <li><%= link_to list.title, list %></li>
  <% end %>
</ul>

<% if @current_user.present? && @current_user == @user %>
  <%= button_to "Edit user", edit_user_path, :method => 'get', :class => 'btn btn-outline-info' %>
<% end %>

<% if @current_user.admin? %>
  <%= button_to "Delete user", users_path, :method => 'delete', :class => 'btn btn-outline-danger' %>
<% end %>
