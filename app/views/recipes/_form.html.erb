<%= form_for @recipe, :html => {:multipart => true} do |f|%>
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', :required => true, :autofocus => true %>
    </div>

    <div class="form-group col-md-6">
      <%= f.label :country_of_origin %>
      <%= f.text_field :origin, :class => 'form-control' %>
    </div>

    <div class="form-group col-md-6">
      <%= f.label :prep_time %>
      <%= f.number_field :prep_time, class: 'form-control' %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label :unit %>
      <%= f.select :prep_time_unit, ['minutes', 'hours'], {}, { :class => 'form-control' }%>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label :cooking_time %>
      <%= f.number_field :cooking_time, class: 'form-control' %>
    </div>

    <div class="form-group col-md-6">
      <%= f.label :unit %>
      <%= f.select :cooking_time_unit, ['minutes', 'hours'], {}, { :class => 'form-control' }%>
    </div>

    <div class="form-group col-md-6">
      <%= f.label :serving %>
      <%= f.number_field :serving, class: 'form-control' %>
    </div>

    <div class="form-group col-md-6">
      <%= f.label :course %>
      <%= f.select :course, ['entree', 'main', 'dessert'], { :include_blank => true }, { :class => 'form-control' } %>
    </div>

  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label :content %>
      <%= f.text_area :content, :rows => '4', class: 'form-control'%>
    </div>

  </div>

  <div class="form-group col-md-6">
    <%= f.label "Upload a photo from your computer" %>
    <%= f.cl_image_upload :image, class: 'form-control' %>
  </div>

  <%= f.submit 'Submit', :class => 'btn btn-success btn-lg' %>

<% end %>
